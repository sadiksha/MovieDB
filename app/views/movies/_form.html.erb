<%= form_for @movie do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <div>
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <div>
      <%= f.text_area :description %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category_id, "Category" %>
    <div>
      <%= f.collection_select :category_id, Category.all, :id, :name, {include_blank: true} %>
    </div>
  </div>
  <%= f.submit "Create" %>
<% end %>
<style>
.form-group label {width: 20% }
</style>
