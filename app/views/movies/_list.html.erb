<% movies.each do |movie| %>
  <tr>
    <td><%= link_to movie.title, movie_path(movie) %></td>
    <td><%= movie.description %></td>
    <td><%= movie.category.name %></td>
    <td><%= movie.average_rating %></td>
    <td><%= link_to "Edit", edit_movie_path(movie) %></td>
    <td><%= link_to "Delete", movie_path(movie), method: :delete %></td>
    <td>
      <% if movie.has_ratings?(current_user).empty? %>
        <%= link_to "Rate", new_movie_rating_path(movie) %>
      <% else %>
        <%= link_to "Change", edit_movie_rating_path(movie, Rating.where(user: current_user, movie: movie).first) %> |
        <%= link_to "Delete Rating", movie_rating_path(movie, Rating.where(user: current_user, movie: movie).first), method: :delete %>
      <% end %>
    </td>
  </tr>
<% end %>
