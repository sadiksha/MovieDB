<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}) do |f| %>
  <h2 class="form-signin-heading">Sign up</h2>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, class: 'input-block-level', placeholder: 'Email' %>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: 'off', class: 'input-block-level', placeholder: 'Password' %>
  </div>

  <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'input-block-level', placeholder: 'Confirm Password' %>
  <div>
    <%= f.submit "Sign up", class: 'btn btn-large btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
